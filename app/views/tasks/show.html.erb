<% if current_user == @task.user %>
<h2><%= @task.content %>のタスク詳細</h2>

<p>タスク名：<%= @task.content %></p>
<p>ステータス：<%= @task.status %></p>
<p>作成日：<%= @task.created_at %></p>
<p>更新日：<%= @task.updated_at %></p>
  <%= link_to 'タスクの更新', edit_task_path(@task),class: 'btn btn-default' %>
  <%= link_to 'タスクの削除', @task, method: :delete, data: { confirm:'本当に削除してよろしいですか？'}, class: 'btn btn-danger' %>
<% else %>
  <%= redirect_to root_path %>

<% end %>